{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-D DEBUG",
                "w:/code/main.cc",
                "-o/w:/env/game.exe",
                "-I/w:/include",
                "-L/w:/lib",
                "-lSDL2",
                "-lSDL2main",
                "-lvulkan-1",
                "-lVkLayer_utils",
                "-Wno-write-strings"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {},
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build shaders",
            "type": "shell",
            "command": "glslc w:/code/shaders/shader.vert -o w:/env/shaders/vert.spv -O; glslc w:/code/shaders/shader.frag -o w:/env/shaders/frag.spv -O",
            "group": "build",
            "presentation": {},
        }
    ]
}
