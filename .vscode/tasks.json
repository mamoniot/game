{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-D DEBUG",
                "${workspaceFolder}\\code\\main.cc",
                "-o${workspaceFolder}\\env_dev\\game.exe",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib",
                "-lSDL2",
                "-lSDL2main",
                "-lvulkan-1",
                "-lVkLayer_utils",
                "-Wno-write-strings"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {},
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "g++",
            "args": [
                "-O3",
                "${workspaceFolder}\\code\\main.cc",
                "-o${workspaceFolder}\\env_win\\game.exe",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib",
                "-lSDL2",
                "-lSDL2main",
                "-lvulkan-1",
                "-lVkLayer_utils",
                "-Wno-write-strings"
            ],
            "group": "build",
            "presentation": {},
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build shaders",
            "type": "shell",
            "command": "glslc ${workspaceFolder}\\code\\shaders\\shader.vert -o ${workspaceFolder}\\env_dev\\shaders\\vert.spv -O; glslc ${workspaceFolder}\\code\\shaders\\shader.frag -o ${workspaceFolder}\\env_dev\\shaders\\frag.spv -O",
            "group": "build",
            "presentation": {},
        }
    ]
}
